{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 2,
  "name": "WebExtension Reloader",
  "description": "WebExtension DevTool, Reload Extension changes simply",
  "version": "0.1.0",
  "permissions": [
    "tabs",
    "management",
    "topSites",
    "bookmarks",
    "storage"
  ],
  "icons": {
    "16": "icons/icon-32.png",
    "48": "icons/icon-128.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "reload": {
      "description": "Reload Extensions",
      "suggested_key": {
        "default": "Alt+R"
      }
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-32.png",
      "32": "icons/icon-32.png"
    },
    "default_title": "Reload WebExtension"
  },
  "options_page": "options.html"
}